<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_gaming_gradient"
    android:padding="32dp">

    <!-- Mensaje de Bienvenida -->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡BIENVENIDO!"
        android:textSize="28sp"
        android:textColor="#FFD700"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:fontFamily="monospace"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <!-- Título del juego -->
    <TextView
        android:id="@+id/game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🐍 SNAKE GAME 🍎"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:fontFamily="monospace"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <!-- Descripción del juego -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/welcome_card_bg"
        android:padding="20dp"
        android:layout_marginBottom="40dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎮 ¿Cómo Jugar?"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Controla la serpiente con los botones de dirección\n• Come las manzanas rojas para crecer\n• ¡Evita chocar con las paredes o contigo mismo!\n• ¡Obtén la puntuación más alta!"
            android:textSize="14sp"
            android:textColor="#E0E0E0"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Botón de inicio -->
    <Button
        android:id="@+id/start_game_button"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:text="🚀 COMENZAR AVENTURA"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/button_style"
        android:elevation="12dp"
        android:layout_marginBottom="20dp" />

    <!-- Mensaje de controles -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✨ Toca los botones en pantalla para moverte ✨"
        android:textSize="12sp"
        android:textColor="#B0B0B0"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />

    <!-- Mensaje adicional de motivación -->
    <TextView
        android:id="@+id/motivation_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Estás listo para el desafío? 🏆"
        android:textSize="14sp"
        android:textColor="#FFD700"
        android:textStyle="italic"
        android:layout_marginTop="20dp" />

</LinearLayout>